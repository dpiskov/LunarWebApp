@model IEnumerable<LunarWebApp.Models.Note>

<h2>All Notes</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th>Date Created</th>
            @* Fix later *@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var note in Model)
        {
            <tr>
                <td>@note.Title</td>
                <td>@note.Body</td>
                <td>@note.DateCreated.ToString("dd.MMMM.yyyy")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@note.Id" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Note</a>